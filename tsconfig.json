{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist",
    "esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"removeComments": false,
		"sourceMap": false,
		"inlineSources": false,
		"strict": true,
		"target": "es6",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
	},
	"typedocOptions": {
		"exclude": "**/*.test.ts",
		"excludeNotExported": true,
		"excludePrivate": true,
		"hideGenerator": true,
		"mode": "modules",
		"out": "docs",
		"theme": "default"
	},
  "ts-node": {
    "useSourceMap": false
  },
	"include": [
		"./src/**/*.ts",
    "./node_modules/ses/index.d.ts",
    "./types"
	]
}
